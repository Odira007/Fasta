@model FastaApp.Entities.User

<form asp-action="Login" method="post" role="form">
    <h4>Login to your Account</h4>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control w-50" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control w-50" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary active">Log in</button>
    </div>

    <div class="form-group">
        <p>
            <a asp-action="Register" asp-controller="User" id="register">Register as a new user</a>
        </p>
    </div>
</form>

@section HideFooter {}
