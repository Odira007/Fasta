<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FastaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white">
            <div class="container py-1 d-flex justify-content-between">
                <a class="navbar-brand font-weight-bold" asp-area="" asp-controller="Home" asp-action="Index">Fasta</a>
                <div move-navlinks>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-flex nav-link-container">
                        <ul class="navbar-nav">
                            <li class="nav-item mr-2">
                                <a class="nav-link text-dark font-weight-normal" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item mr-2">
                                <a class="nav-link text-dark font-weight-normal" asp-area="" asp-controller="Home" asp-action="Index">Cars</a>
                            </li>
                            <li class="nav-item mr-2">
                                <a class="nav-link text-dark font-weight-normal" asp-area="" asp-controller="Home" asp-action="Index">Offers</a>
                            </li>
                            <li class="nav-item mr-2">
                                <a class="nav-link text-dark font-weight-normal" asp-area="" asp-controller="Home" asp-action="Index">Locations</a>
                            </li>
                            @*<li class="nav-item">
                                    <a class="nav-link text-dark font-weight-normal" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>*@
                        </ul>
                        <a class="btn btn-primary active" asp-controller="User" asp-action="Login">Sign in</a>

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mx-auto p-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (IsSectionDefined("HideFooter"))
    {
        @RenderSection("HideFooter", false)
    }
    else
    {
        <footer class="border-top footer text-muted">
            <div class="container d-flex justify-content-center align-content-center p-3 add-footer-style set-fs">
                <div>
                    <h2 class="text-decoration-none dark"><a asp-area="" asp-controller="Home" asp-action="Index">Fasta</a></h2>
                    <p class="add-mb">Rides for the daily achievers</p>
                    &copy; Copyright 2023 Fasta
                </div>
                <div>
                    <ul class="footer-lists">
                        <li class="h5">Company</li>
                        <li>About Us</li>
                        <li>Careers</li>
                        <li>Support</li>
                        <li>Terms and Conditions</li>
                    </ul>
                </div>
                <div>
                    <ul class="footer-lists">
                        <li class="h5">Features</li>
                        <li>Vehicle tracker</li>
                        <li>IOS & Android Apps</li>
                        <li>Business Tips</li>
                        <li>Locations</li>
                    </ul>
                </div>
                <div>
                    <ul class="footer-lists">
                        <li class="h5">Contact Us</li>
                        <li>About Us</li>
                        <li>Careers</li>
                        <li>Support</li>
                        <li>Terms and Conditions</li>
                    </ul>
                </div>
                <div>
                    <h5>Get Deals and Discounts</h5>
                    <p>Subscribe to our news letter</p>
                    <input type="email" class="w-100 h-25 border-0" placeholder="Email" />
                </div>
            </div>

        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>